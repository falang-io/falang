{
  "name": "@falang/site-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc --build",
    "postbuild": "copyfiles -u 1 src/**/*.nunjucks dist/src/",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start HttpApiServer",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:setup": "bash ./scripts/setup-tests.sh",
    "test": "npm run test:setup && npm run test:only",
    "test:only": "ENV_FILENAME=.test.env jest",
    "test:only:debug": "ENV_FILENAME=.test.env jest --testTimeout=100000000 -i",
    "test:watch": "npm run test:setup && ENV_FILENAME=.test.env jest --watch",
    "test:cov": "npm run test:setup && ENV_FILENAME=.test.env jest --coverage",
    "test:debug": "ENV_FILENAME=.test.env node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "npm run test:setup && ENV_FILENAME=.test.env jest --config ./test/jest-e2e.json",
    "db:create-migration": "bash ./scripts/create-migration.sh",
    "typeorm:test:run-migrations": "ENV_FILENAME=.test.env npm run typeorm:run-migrations",
    "typeorm:test:create-migration": "ENV_FILENAME=.test.env npm run typeorm:create-migration",
    "typeorm:test:generate-migration": "ENV_FILENAME=.test.env npm run typeorm:generate-migration",
    "typeorm:test:revert-migration": "ENV_FILENAME=.test.env npm run typeorm:revert-migration",
    "typeorm": "ts-node ./node_modules/typeorm/cli",
    "typeorm:run-migrations": "npm run typeorm migration:run -- -d ./src/domains/system/database/Database.datasource.ts",
    "typeorm:generate-migration": "npm run typeorm -- -d ./src/domains/system/database/Database.datasource.ts migration:generate ./migrations/asd",
    "typeorm:create-migration": "npm run typeorm -- migration:create ./migrations/asd",
    "typeorm:revert-migration": "npm run typeorm -- -d ./src/domains/system/database/Database.datasource.ts migration:revert",
    "api:sync": "ts-node ./scripts/sync-api.ts"
  },
  "dependencies": {
    "@falang/project": "workspace:*",
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/platform-socket.io": "^9.2.0",
    "@nestjs/typeorm": "^9.0.1",
    "@nestjs/websockets": "^9.2.0",
    "@types/md5": "^2.3.2",
    "@types/nodemailer": "^6.4.7",
    "@types/nunjucks": "^3.2.1",
    "@types/passport": "^1.0.12",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^8.3.4",
    "@types/validator": "^13.7.10",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.0.3",
    "express-session": "^1.17.3",
    "md5": "^2.3.0",
    "moment": "^2.29.4",
    "nestjs-pino": "^3.1.1",
    "nodemailer": "^6.8.0",
    "nunjucks": "^3.2.3",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "pg": "^8.8.0",
    "pino-http": "^8.2.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "supertest": "^7.0.0",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.5",
    "@types/glob": "^8.0.0",
    "@types/node": "^16.0.0",
    "@types/passport-local": "^1.0.34",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "glob": "^8.0.3",
    "pino-pretty": "^9.1.1",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.0",
    "typescript": "^4.9.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/domains/system/database/Database.datasource.ts",
      "<rootDir>/domains/system/database/migrations/*.ts"
    ]
  },
  "files": [
    "src",
    "dist"
  ]
}
